{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "lib": ["dom", "dom.iterable", "es2021"],
    "target": "es2021",
    "module": "es2022",
    "jsx": "react-jsx",
    "checkJs": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "*.js", "*.d.ts"]
}